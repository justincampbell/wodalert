<div class="columns">
  <div class="column">
    <h3 class="subtitle">Get texts when your gym posts a new workout</h3>
  </div>
</div>

<div class="columns">
  <div class="column">
    {{feed-search subscription=model}}
    {{subscription-options subscription=model}}
  </div>

  <div class="column">
    {{sms-preview subscription=model}}
  </div>
</div>

<div class="field">
  <div class="control has-icons-left">
    {{input type="tel" class="input is-medium" placeholder="Phone Number"}}
    <span class="icon is-medium is-left">
      <i class="fa fa-mobile"></i>
    </span>
  </div>
</div>

<div class="field">
  <div class="control">
    <button class="button is-medium is-black" {{action 'confirmSubscriptionOptions'}}>
      Sign Up
    </button>
  </div>
</div>

{{#if confirmedSubscriptionOptions}}
  Done!
{{/if}}
